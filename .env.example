# VibeAgent Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=VibeAgent
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=http://localhost:8087/v1
LLM_MODEL=glm-4.7
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# Custom OpenAI Configuration
CUSTOM_OPENAI_URL=http://localhost:8087/v1
CUSTOM_OPENAI_API=placeholder

# Database Configuration
# Options: sqlite, postgresql
DATABASE_BACKEND=sqlite

# SQLite Settings (Default)
DATABASE_SQLITE_PATH=data/vibeagent.db

# PostgreSQL Settings (Optional)
DATABASE_POSTGRES_HOST=localhost
DATABASE_POSTGRES_PORT=5432
DATABASE_POSTGRES_USER=agentzero
DATABASE_POSTGRES_PASSWORD=agentzero
DATABASE_POSTGRES_DB=vibeagent
DATABASE_POSTGRES_POOL_SIZE=10
DATABASE_POSTGRES_MAX_OVERFLOW=20

# Ollama Embedding Configuration
OLLAMA_EMBEDDING_URL=http://127.0.0.1:11434
OLLAMA_EMBEDDING_API=placeholder

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["localhost","127.0.0.1"]
CORS_ORIGINS=["http://localhost:3000"]
